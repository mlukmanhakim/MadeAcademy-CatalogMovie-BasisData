<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.lukman.catalogmovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.dicoding.lukman.catalogmovie.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.dicoding.lukman.catalogmovie.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:label="@string/search_hint"
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".activiy.ActivitySearch"
           >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activiy.MainActivity" />

        </activity>
        <activity
            android:label="@string/detail_film"
            android:name=".activiy.DetailMovie"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activiy.MainActivity" />
        </activity>
        <activity android:name=".activiy.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.dicoding.lukman.catalogmovie"
            android:name=".provider.FavoriteProvider"
            android:exported="true"
            android:readPermission="com.dicoding.lukman.catalogmovie.READ_DATABASE"
            android:writePermission="com.dicoding.lukman.catalogmovie.WRITE_DATABASE" />
    </application>

</manifest>